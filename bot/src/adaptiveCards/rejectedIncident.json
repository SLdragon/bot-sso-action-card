{
    "type": "AdaptiveCard",
    "body": [
      {
        "type": "Container",
        "style": "emphasis",
        "items": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "size": "Large",
                    "weight": "Bolder",
                    "text": "**${incidentTitle}**"
                  }
                ],
                "width": "stretch"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "size": "Medium",
                    "weight": "Bolder",
                    "text": "Rejected"
                  }
                ],
                "width": "auto"
              }
            ]
          }
        ],
        "bleed": true
      },
      {
        "type": "Container",
        "items": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "width": "stretch",
                "items": [
                  {
                    "type": "FactSet",
                    "facts": [
                      {
                        "title": "**Created By:**",
                        "value": "${createdByName}"
                      },
                      {
                        "title": "**Assigned To:**",
                        "value": "${assignedToName}"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
  }
  