{
    "type": "AdaptiveCard",
    "refresh": {
      "action": {
        "type": "Action.Execute",
        "title": "Submit",
        "verb": "initialRefresh",
        "data": {
          "createdByName": "${createdByName}",
          "createdByUserID": "${createdByUserId}"
        }
      },
      "userIds": [
        "${createdByUserID}"
      ]
    },
    "body": [
      {
        "type": "TextBlock",
        "text": "Please wait...",
        "color": "warning",
        "size": "Medium",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "${createdByName} is creating an incident for Microsoft Teams!",
        "weight": "Bolder",
        "size": "Medium",
        "wrap": true
      }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
  }
  