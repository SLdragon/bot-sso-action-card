{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "body": [
      {
        "type": "TextBlock",
        "size": "Medium",
        "weight": "Bolder",
        "text": "Incident Management"
      },
      {
        "type": "RichTextBlock",
        "separator": true,
        "inlines": [
          {
            "type": "TextRun",
            "text": "Title"
          }
        ]
      },
      {
        "type": "Input.Text",
        "id": "incidentTitle",
        "placeholder": "Enter Title"
      },
      {
        "type": "RichTextBlock",
        "inlines": [
          {
            "type": "TextRun",
            "text": "Assigned To"
          }
        ]
      },
      {
        "type": "Input.ChoiceSet",
        "choices": "${assignees}",
        "id": "assignedToUserId",
        "isMultiSelect": false
      },
      {
        "type": "ActionSet",
        "actions": [
          {
            "type": "Action.Execute",
            "verb": "createIncident",
            "title": "Submit",
            "data": {
              "createdByName": "${createdByName}",
              "createdByUserId": "${createdByUserId}",
              "assignedToName": "${assignedToName}",
              "assignedToUserId": "${assignedToUserId}"
            }
          }
        ]
      }
    ],
    "type": "AdaptiveCard",
    "version": "1.4"
  }
  